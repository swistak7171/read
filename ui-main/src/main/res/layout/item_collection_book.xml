<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="book"
            type="pl.kamilszustak.read.model.domain.CollectionBook" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentPadding="@dimen/default_padding"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/default_radius">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/coverImageView"
                android:layout_width="64dp"
                android:layout_height="128dp"
                android:layout_marginStart="16dp"
                app:imageUrl="@{book.coverImageUrl}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"
                tools:src="@tools:sample/avatars" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/barrierView"
                android:visibility="invisible"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/coverImageView"
                android:layout_marginStart="@dimen/default_margin" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/titleTextView"
                android:text="@{book.title}"
                tools:text="@tools:sample/lorem/random"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                android:ellipsize="end"
                android:lines="1"
                app:layout_constraintStart_toEndOf="@id/barrierView"
                app:layout_constraintEnd_toStartOf="@id/menuButton"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/menuButton"
                android:src="@drawable/icon_menu_vertical"
                android:background="?selectableItemBackgroundBorderless"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/authorTexttView"
                android:text="@{book.author}"
                tools:text="@tools:sample/lorem"
                android:ellipsize="end"
                android:lines="1"
                app:layout_constraintStart_toEndOf="@id/barrierView"
                app:layout_constraintEnd_toEndOf="@id/titleTextView"
                app:layout_constraintTop_toBottomOf="@id/titleTextView" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/descriptionTextView"
                android:text="@{book.description}"
                tools:text="@tools:sample/lorem/random"
                android:maxLines="5"
                android:ellipsize="end"
                app:layout_constraintStart_toEndOf="@id/barrierView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/authorTexttView"
                android:layout_marginTop="@dimen/default_half_margin" />

            <androidx.constraintlayout.widget.Barrier
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBarBarrier"
                app:constraint_referenced_ids="coverImageView,descriptionTextView"
                app:barrierDirection="bottom" />

            <com.google.android.material.progressindicator.ProgressIndicator
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar"
                style="@style/Widget.MaterialComponents.ProgressIndicator.Linear.Determinate"
                android:max="100"
                android:progress="@{book.progressPercentage}"
                tools:progress="50"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/progressTextView"
                app:layout_constraintTop_toBottomOf="@id/progressBarBarrier"
                android:layout_marginEnd="@dimen/default_margin"
                android:layout_marginTop="@dimen/default_half_margin"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressTextView"
                android:text="@{@string/progress_percentage(book.progressPercentage)}"
                tools:text="50%"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/progressBar"
                app:layout_constraintBottom_toBottomOf="@id/progressBar"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>