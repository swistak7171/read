<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="pl.kamilszustak.read.ui.main.profile.statistics.StatisticsViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
            <include layout="@layout/switcher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:text="@{viewModel.weekText}" />

            <ViewFlipper
                android:layout_width="match_parent"
                android:layout_height="@dimen/chart_height"
                android:id="@+id/weekChartsViewFlipper"
                android:layout_marginHorizontal="@dimen/default_margin"
                android:layout_marginTop="@dimen/default_margin" />
            
            <View
                android:layout_width="match_parent"
                style="@style/Divider"
                android:layout_marginHorizontal="@dimen/default_margin"
                android:layout_marginTop="@dimen/default_margin" />

            <include layout="@layout/switcher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:text="@{viewModel.monthText}"
                android:layout_marginTop="@dimen/default_margin" />

            <ViewFlipper
                android:layout_width="match_parent"
                android:layout_height="@dimen/chart_height"
                android:id="@+id/monthChartsViewFlipper"
                android:layout_marginHorizontal="@dimen/default_margin"
                android:layout_marginTop="@dimen/default_margin" />
        </LinearLayout>
    </ScrollView>
</layout>